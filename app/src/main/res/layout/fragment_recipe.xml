<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:textSize="22sp"/>

        <ImageView android:id="@+id/recipe_instructions_image"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="24dp"
            android:layout_below="@id/recipe_title"/>

        <TextView android:id="@+id/vegetarian_suitable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="24dp"
            android:textSize="16sp"/>

        <TextView android:id="@+id/vegan_suitable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="24dp"
            android:textSize="16sp"/>

        <TextView android:id="@+id/servings_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="24dp"
            android:textSize="16sp"/>

        <TextView android:id="@+id/ready_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="10dp"
            android:textSize="22sp"
            android:text="Ingredients"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recipe_ingredients_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="10dp"/>

        <TextView android:id="@+id/recipe_instructions_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textSize="14sp"/>

    </LinearLayout>
</ScrollView>